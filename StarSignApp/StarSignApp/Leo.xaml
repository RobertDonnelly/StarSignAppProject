<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Leo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Leo"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageLeo"
                   Source="StarSignApp.NewFolder.leo.jpg"/>
            <Label Text="Fire sign: ruled by the Sun.  &#10;
Generous, organized, protective, beautiful."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>