<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Pisces">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pisces &#10; February 18 – March 20"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                XAlign="Center"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imagePisces"
                   Source="StarSignApp.NewFolder.pisces.jpg"/>
            <Label Text=" Water sign: ruled by Neptune. &#10;
Likeable, energetic, passionate, sensitive."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>