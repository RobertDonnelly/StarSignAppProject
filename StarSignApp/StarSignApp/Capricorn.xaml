<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Capricorn">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Capricorn &#10; December 21 – January 20"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                XAlign="Center"   
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageCapricorn"
                   Source="StarSignApp.NewFolder.capricorn.png"/>
            <Label Text="Earth sign: ruled by Saturn. &#10;
Timeless, driven, calculating, ambitious."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>