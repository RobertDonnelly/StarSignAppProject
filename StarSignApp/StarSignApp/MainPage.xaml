<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StarSignApp"
             x:Class="StarSignApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to my Star Sign App" 
           HorizontalOptions="Center"
           VerticalOptions="Center" />
        <Button x:Name="btnLogin" Text="Click to Start" 
                Clicked="btnLogin_Clicked" 
                HorizontalOptions="CenterAndExpand" 
                VerticalOptions="Center"/>
        <Image Margin="0.1,0.1,0.1,0.1"
              Aspect="AspectFill"
               x:Name="imageStars"
               Source="StarSignApp.NewFolder.stars.png"/>
    </StackLayout>
        

</ContentPage>
