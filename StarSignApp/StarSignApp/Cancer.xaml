<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Cancer">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cancer"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageCancer"
                   Source="StarSignApp.NewFolder.cancer.jpg"/>
            <Label Text="A water sign: ruled by the Moon.
                   &#10; Emotional, group oriented, seeks security, family."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>