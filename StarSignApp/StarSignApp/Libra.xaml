<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Libra">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Libra "
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageLibra"
                   Source="StarSignApp.NewFolder.libra.jpg"/>
            <Label Text="Air sign: ruled by Venus. &#10;
Balanced, seeks beauty, sense of justice."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>