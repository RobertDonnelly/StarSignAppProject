<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Sagittarius">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sagittarius &#10; November 22 – December 21"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                XAlign="Center"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageSagittarius"
                   Source="StarSignApp.NewFolder.sagittarius.jpg"/>
            <Label Text="Fire sign: ruled by Jupiter. &#10;
Happy, absent minded, creative, adventurous."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>