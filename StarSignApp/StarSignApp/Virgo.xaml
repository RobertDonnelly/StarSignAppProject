<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSignApp.Virgo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Virgo &#10; August 23 – September 23"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                XAlign="Center"
                FontSize = "30"/>
            <Image Margin="0.1,0.1,0.1,0.1"
                   WidthRequest="200"
                   HeightRequest="200"
                   x:Name="imageVirgo"
                   Source="StarSignApp.NewFolder.virgo.png"/>
            <Label Text="Earth sign: ruled by Mercury. &#10;
Particular, logical, practical, sense of duty, critical."
             HorizontalOptions="Center"
             VerticalOptions="Center"
             XAlign="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>